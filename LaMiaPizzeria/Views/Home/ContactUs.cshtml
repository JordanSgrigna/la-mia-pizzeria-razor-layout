<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="row mb-5">
                <div class="col-md-4 mr-auto">
                    <h3 class="thin-heading contacts-headers mb-4">Città</h3>
                    <p>
                        Via
                        <br />
                        Città, ZIP
                    </p>
                </div>
                <div class="col-md-6 ml-auto">
                    <h3 class="thin-heading contacts-headers mb-4">Info Contatti</h3>
                    <p>T: +0000000 <br> E: info@mywebsite.com</p>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <h3 class="thin-heading contacts-headers mb-4">Messaggiaci!</h3>
                    <form class="mb-5" method="post" id="contactForm" name="contactForm" novalidate="novalidate">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="text" class="form-control" name="name" id="name" placeholder="Nome">
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="text" class="form-control" name="email" id="email" placeholder="Email">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group pt-2">
                                <textarea class="form-control" name="message" id="message" cols="30" rows="2" placeholder="Messaggio"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 pt-2">
                                <input type="submit" value="Invia" class="btn btn-dark rounded-0 py-2 px-4">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>